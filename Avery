import java.util.Random;
import java.util.Scanner;

public class CoinFlippingGame {
	public static void main(String[] args) {
		Random rand = new Random();
		Scanner scan = new Scanner(System.in);
		int result = rand.nextInt(2);
		int heads = 0;
		int tails = 0;
		System.out
				.println("Welcome to the coin fucker. How many coins to fuck?");
		int[] coinArray = new int[scan.nextInt()];
		for (int i = 0; i < coinArray.length; i++) {
			coinArray[i] = rand.nextInt(2);
			if (coinArray[i] == 0) {
				tails++;
			} else {
				heads++;
			}

		}
		//Insert the rules here, like check the amount of heads the user thinks. compare it to heads.
		//add a wallet (integer), with money in it. 
		System.out.println("There were " + heads + " heads in a total of "
				+ coinArray.length + " coins.");

	}
}
