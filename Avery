import java.util.Random;
import java.util.Scanner;
import javax.swing.JOptionPane;

public class CoinFlippingProject {
	public static void main(String[] args) {

		String betType = JOptionPane
				.showInputDialog("Place a bet! Type heads or tails!");

		JOptionPane.showMessageDialog(null, "You picked "+betType + ", Good Luck!");

		Random rand = new Random();
		Scanner scan = new Scanner(System.in);
		
		int result = rand.nextInt(2);
		int heads = 0;
		int tails = 0;
		int bank = 10;
		int parseBet;
		
		if (betType.toLowerCase().equals("heads"))
		{
			parseBet = 1;
		}
		
		else
		{
			parseBet = 0;
		}
		if(parseBet !=1 && parseBet !=0)
		{
			JOptionPane.showMessageDialog(null, "Error! Type heads or tails!");
			result = 5;
		}
		if (result != parseBet)
		{
			JOptionPane.showMessageDialog(null, "You Loose... :( Try Again");
			result = 5;
		}
		
		if (result == parseBet)
		{
			JOptionPane.showMessageDialog(null, "You Win!");
			result = 5;
		}
		
		
		if (result == parseBet)
		{
			JOptionPane.showMessageDialog(null, "You Win!");
			result = 5;
		}
		
			
}
}
