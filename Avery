import java.util.Random;
import java.util.Scanner;
import javax.swing.JOptionPane;

public class CoinFlippingProject {
	public static void main(String[] args) {

		String betType = JOptionPane
				.showInputDialog("Place a bet! Type heads or tails!");

		JOptionPane.showMessageDialog(null, "You picked " + betType
				+ ", Good Luck!");

		Random rand = new Random();
		Scanner scan = new Scanner(System.in);
		int result = rand.nextInt(2);
		int heads = 0;
		int tails = 0;
		int bank = 10;
		int coin = rand.nextInt(2);
		System.out.println(coin);
		int parseBet = 2;
		if (betType.toLowerCase().equals("heads")) {
			parseBet = 1;
		} else if (betType.toLowerCase().equals("tails")) {
			parseBet = 0;
		}
		if (coin == parseBet) {
			JOptionPane.showMessageDialog(null, "Congrats");
		} else {
			System.out.println("The coin wasn't " + betType);
		}
	}
}
